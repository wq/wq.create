                        {
                            "name": "water",
                            "label": "Water"
                        },
                        {
                            "name": "air",
                            "label": "Air"
                        },
                        {
                            "name": "land",
                            "label": "Land"
                        }
                    ],
                    "type": "select one"
                },
                {
                    "name": "geometry",
                    "label": "Location",
                    "bind": {
                        "required": true
                    },
                    "hint": "The location of the site",
                    "type": "geopoint"
